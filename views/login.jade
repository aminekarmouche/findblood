extends layout

block content
    h1 Login 
    form(method='POST' action='/login')
        div.form-group
        label(for='email') Your khra email:
        br
        input#email.form-control(type='email', placeholder='Input' name='email' required='true')
        br
        br
        label(for='password') Your password:
        br
        input#password.form-control(type='password', placeholder='Input' name='password' required='true')
        br            
        div.form-group
        button.btn.btn-primary(type='submit') Submit
        
    if errors 
        ul
        for error in errors
            li!= error.msg

        Terms